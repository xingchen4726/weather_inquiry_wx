/* pages/weatherDemo/weatherDemo.wxss */
.container {
  padding: 20px;
}

.input-container {
  margin-bottom: 20px;
}

input {
  margin: 10px 0;
  padding: 10px;
  width: 100%;
  border-radius: 5px;
  border: 1px solid #ccc;
}

button {
  background-color: #1aad19;
  color: white;
  padding: 10px;
  border-radius: 5px;
  width: 100%;
}

.weather-container {
  margin-top: 20px;
  padding: 10px;
  background-color: #f5f5f5;
  border-radius: 5px;
}

.weather-item {
  padding: 8px 0;
  border-bottom: 1px solid #e0e0e0;
}

.weather-item:last-child {
  border-bottom: none;
}